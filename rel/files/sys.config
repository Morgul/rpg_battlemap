[
	{rpg_battlemap, [
		% Which callback module to use for getting data.
		{data_callback, rpgb_dets},

		% the hostname used for building urls.
		{hostname, 'localhost'},

		% the port the site will listen on
		{port, 9090},

		% how many listeners to start
		% {listeners, 100},

		% additional modules to start supervised
		% each entry is id, module, function, arguments and [Modules] entry
		{additional_modules, [
			{rpgb_dets, rpgb_dets, start_link, [], [rpgb_dets]}
		]}
]},

{'lager', [
	{handlers, [
		{lager_console_backend, [info, true]},
		{lager_file_backend, [
			{file, "debug.log"},
			{level, debug},
			{size, 10485769},
			{date, "$D0"},
			{count, 5}
		]}
	]},
	%{colored, true},
	{crash_log, "crash.log"}
]},

 %% SASL config
 {sasl, [
         {sasl_error_logger, {file, "log/sasl-error.log"}},
         {errlog_type, error},
         {error_logger_mf_dir, "log/sasl"},      % Log directory
         {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
         {error_logger_mf_maxfiles, 5}           % 5 files max
        ]}
].

